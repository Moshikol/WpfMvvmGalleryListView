<UserControl x:Class="InnoviMvvm.Views.UserContorls.SwitchUC"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:InnoviMvvm.Views.UserContorls"
             xmlns:vm="clr-namespace:InnoviMvvm.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="85">
    <StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" >
            <Button  >
                <Button.Template>
                    <ControlTemplate>

                        <Image Height="50" Width="75" Source="{Binding SwitchImageSource}"/>

                    </ControlTemplate>
                </Button.Template>
            </Button>

        </StackPanel>
    </StackPanel>
</UserControl>
